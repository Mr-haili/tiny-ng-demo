{
  "compilerOptions": {
    "outDir": "./dist/",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es2017", "DOM", "es6" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "filesGlob": [
    "**/*.ts",
    "!node_modules/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
